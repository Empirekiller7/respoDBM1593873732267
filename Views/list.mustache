<div class="content">
<div class="row">

{{ >menu }} 
<!--<div class="content-selection">-->
<div class="col-md-{{content}}" >
<h4> {{title}} </h4>
<!--<input type="text" id="inputSearch" onkeyup="search(this)" placeholder="Search for...">-->
<a href="/backoffice/{{title}}/Insert" class="btn btn-primary" id="insert-register">Insert new {{title}}</a>
<div id="table_{{title}}">   
    <table id="this_table" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">             
        <thead>
            <tr>
                {{#columns}}
                <th>{{.}}</th>
                {{/columns}}
                 <th>Details</th>
                 <th>Edit</th>
                 <th>Delete</th>               
            </tr> 
        </thead>
        <tbody>         
            {{#rows}}             
            <tr>                 
                {{#properties}}                 
                <td> 
                    {{.}}                 
                </td>                 
                {{/properties}}              
            {{#actions}}     
                <td>         
                    <a href="{{link}}" title="{{tooltip}}" {{#events}}{{name}}="javascript: {{function}}({{args}})" {{/events}}>             
                        {{#image}}                 
                        <img src="{{src}}" alt="{{alt}}" />             
                        {{/image}}         
                    </a>     
                </td> 
            {{/actions}}  
            </tr>             
            {{/rows}}  
        </tbody>         
    </table> 
