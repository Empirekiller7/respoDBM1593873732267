        url: '/api/{{title}}/' + id + '/',
        type: 'DELETE',
        success: function (data) { 
            // Handle success here
            $("#table_{{title}}").fadeOut(700, function(){
                $("#table_{{title}}").load(location.href + " #table_{{title}}");
                $("#table_{{title}}").fadeIn().delay(700);
             });
        },
        cache: false
        }).fail(function (jqXHR, textStatus, error) {
            // Handle error here
            console.log(textStatus)
