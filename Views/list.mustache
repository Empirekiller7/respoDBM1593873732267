    <script>
        // Data tables script
        $(document).ready( function () {
            let exportsColumns = 'th:not(:nth-last-child(-n+4))';
                $('#this_table').DataTable({
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            exportOptions: {
                                columns: exportsColumns
                            }
                        },
                        {
                            extend: 'pdfHtml5',
                            exportOptions: {
                                columns: exportsColumns
                            }
                        }
                    ],
                    "columnDefs": [
                            { "orderable": false, "targets": exportsColumns }
                        ]
                });
        });
    </script> 
